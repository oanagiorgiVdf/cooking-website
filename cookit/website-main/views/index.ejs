<!DOCTYPE html>
<html>
<%- include('./partials/_head'); %>

  <body>
    <%- include('./partials/_navbar'); %>
      <div class="home-container">
        <!-- Slideshow container -->
        <div class="slideshow-container">

          <!-- Full-width images with number and caption text -->
          <div class="mySlides fade">
            <img src="/images/coperta3.jpg" style="height:600px; width:100%">
            <div class="text first">
              <p>Stop wasting food, cook at home!</p>
            </div>
          </div>

          <div class="mySlides fade">
            <img src="/images/coperta4.jpg" style="height:600px; width:100%">
            <div class="text third">
              <p>Control your intolerances</p>
            </div>
          </div>

          <div class="mySlides fade">
            <img src="/images/coperta2.jpg" style="width:100%; height:600px">
            <div class="text second">
              <p>Don`t have an account? Create one!</p>
            </div>
          </div>

          <!-- Next and previous buttons -->
          <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
          <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <br>

        <!-- The dots/circles -->
        <div style="text-align:center">
          <span class="dot" onclick="currentSlide(1)"></span>
          <span class="dot" onclick="currentSlide(2)"></span>
          <span class="dot" onclick="currentSlide(3)"></span>
        </div>
        <div class="homepage-text">
          <p>Join us now!</p>
        </div>
        <a href="/recipes"><button class="btn btn-danger main__button__login">Let`s cook!</button></a>
      </div>
      <script src="home_slide.js"></script>
      <%- include('./partials/_footer'); %>
  </body>

</html>